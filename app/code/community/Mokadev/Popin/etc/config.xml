    <global>
        <models>
            <mokadev_popin>
                <class>Mokadev_Popin_Model</class>
            </mokadev_popin>
        </models>
        <blocks>
            <mokadev_popin>
                <class>Mokadev_Popin_Block</class>
            </mokadev_popin>
        </blocks>
