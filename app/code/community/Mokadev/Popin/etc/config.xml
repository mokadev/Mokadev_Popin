            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mokadev_Popin>
                    <files>
                        <default>Mokadev_Popin.csv</default>
                    </files>
                </Mokadev_Popin>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <mokadev_popin>
            <general>
                <cookie>86000</cookie>
            </general>
        </mokadev_popin>
    </default>
